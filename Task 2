#include <iostream>
using namespace std;
int main()
{
    int arr[5];
    int *ptr = arr;
    int sum = 0;
    cout << "Enter elements of array" << endl;
    for (int i = 0; i < 5; i++)
    {
        cin >> *(ptr + i);
    }
    for (int i = 0; i < 5; i++)
    {
        sum += *(ptr + i);
    }
    cout << "The sum of the array elements is: " << sum << endl;

    return 0;
}
